<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>aingle-archetypes-parent</artifactId>
    <groupId>org.apache.aingle</groupId>
    <version>1.11.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>aingle-service-archetype</artifactId>
  <packaging>maven-archetype</packaging>

  <name>Apache AIngle Maven Service Archetype</name>
  <description>Archetype that generates a simple example AIngle service</description>

  <properties>
    <main.basedir>${project.parent.parent.parent.basedir}</main.basedir>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <targetPath>archetype-resources</targetPath>
        <directory>target/generated-resources</directory>
        <filtering>false</filtering>
        <includes>
          <include>pom.xml</include>
        </includes>
      </resource>
    </resources>
  </build>

</project>
